    <script>
        // Countdown Timer
        const weddingDate = new Date("Dec 4, 2024 18:00:00 GMT+0530").getTime();

        const countdownElement = document.getElementById("daysRemaining");

        function updateCountdown() {
            const now = new Date().getTime();
            const distance = weddingDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            countdownElement.innerHTML = `${days} days, ${hours} hours, ${minutes} minutes, ${seconds} seconds`;

            if (distance < 0) {
                clearInterval(timer);
                countdownElement.innerHTML = "The event has started!";
            }
        }

        // Update countdown every second
        const timer = setInterval(updateCountdown, 1000);

        function toggleEventDetails() {
            const eventDetails = document.getElementById("eventDetails");
            eventDetails.style.display = (eventDetails.style.display === "block") ? "none" : "block";
        }
    </script>
